# FreshPunk Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================
# Firebase Configuration
# ===========================
# Get these from: Firebase Console → Project Settings → General
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# ===========================
# Stripe Payment Processing
# ===========================
# Get these from: https://dashboard.stripe.com/apikeys
# TEST MODE (for development)
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_
STRIPE_SECRET_KEY_TEST=sk_test_
STRIPE_WEBHOOK_SECRET_TEST=whsec_

# LIVE MODE (for production)
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_
STRIPE_SECRET_KEY_LIVE=sk_live_
STRIPE_WEBHOOK_SECRET_LIVE=whsec_

# Stripe Product Price IDs (from Stripe Dashboard → Products)
STRIPE_PRICE_ID_NUTRITIOUS_JR=price_
STRIPE_PRICE_ID_DIET_KNIGHT=price_
STRIPE_PRICE_ID_LEAN_FREAK=price_

# ===========================
# Google Maps API
# ===========================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY_ANDROID=
GOOGLE_MAPS_API_KEY_IOS=
GOOGLE_MAPS_API_KEY_WEB=

# ===========================
# DoorDash Delivery Integration (Optional)
# ===========================
# Get these from: DoorDash Developer Portal
DOORDASH_DEVELOPER_ID=
DOORDASH_KEY_ID=
DOORDASH_SIGNING_SECRET=
DOORDASH_ENVIRONMENT=sandbox  # or 'production'

# ===========================
# Firebase Cloud Functions
# ===========================
CLOUD_FUNCTIONS_REGION=us-east4

# ===========================
# Application Environment
# ===========================
ENVIRONMENT=development  # or 'staging' or 'production'
DEBUG_MODE=true          # Set to false in production

# ===========================
# Optional: Analytics & Monitoring
# ===========================
# Google Analytics
GA_MEASUREMENT_ID=

# Sentry (Error Tracking)
SENTRY_DSN=

# ===========================
# Optional: Email Service (Future)
# ===========================
# SendGrid, Mailgun, etc.
SENDGRID_API_KEY=
EMAIL_FROM_ADDRESS=

# ===========================
# Optional: SMS Notifications (Future)
# ===========================
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================
# Security
# ===========================
# JWT Secret for custom tokens (if needed)
JWT_SECRET=

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# NOTES
# ===========================
# - Never commit this file with actual values to version control
# - Add .env to .gitignore
# - Store production secrets in Firebase Secret Manager or similar
# - Rotate keys regularly for security
# - Use different keys for development/staging/production
