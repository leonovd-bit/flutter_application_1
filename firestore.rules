rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User-scoped documents
    match /users/{userId} {
      // Allow user to read/write their own profile doc
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Nested collections under a user
      match /addresses/{addressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /meal_plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /delivery_schedules/{scheduleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /subscriptions/{subId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /health_data/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Orders collection (top-level)
    match /orders/{orderId} {
      // Allow create if the creating user owns the order
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow read/update/delete if the authenticated user owns the order
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
