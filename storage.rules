rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /meals/{allPaths=**} {
      // Anyone can read meal images (including nested paths like Meal Images/)
      allow read: if true;
      // Only authenticated users (admins) can write/delete
      allow write, delete: if request.auth != null;
    }

    // User profile images (if needed in future)
    match /users/{userId}/{allPaths=**} {
      // Users can read their own files
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can write their own files
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}